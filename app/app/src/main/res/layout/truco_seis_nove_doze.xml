<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/bk_truco">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_nos1"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:fontFamily="@font/anton_regular"
            android:textColor="@color/red"
            android:layout_marginBottom="10dp"
            android:text="@string/pontos_nos" />
        <ImageView
            android:layout_marginBottom="5dp"
            android:id="@+id/btn_truco_tres_nos"
            android:layout_width="wrap_content"
            android:layout_height="140dp"
            android:src="@drawable/tres_truco"/>

        <ImageView
            android:layout_marginBottom="5dp"
            android:id="@+id/btn_truco_seis_nos"
            android:layout_width="wrap_content"
            android:layout_height="140dp"
            android:src="@drawable/seis_truco"/>

        <ImageView
            android:layout_marginBottom="5dp"
            android:id="@+id/btn_truco_nove_nos"
            android:layout_width="wrap_content"
            android:layout_height="140dp"
            android:src="@drawable/nove_truco" />

        <ImageView
            android:layout_marginBottom="5dp"
            android:id="@+id/btn_truco_doze_nos"
            android:layout_width="wrap_content"
            android:layout_height="140dp"
            android:src="@drawable/doze_truco" />

    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_eles_truco"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:fontFamily="@font/anton_regular"
            android:textColor="@color/red"
            android:layout_marginBottom="10dp"
            android:text="@string/pontos_eles" />

        <ImageView
            android:layout_marginBottom="5dp"
            android:id="@+id/btn_truco_tres_eles"
            android:layout_width="wrap_content"
            android:layout_height="140dp"
            android:src="@drawable/tres_truco" />

        <ImageView
            android:layout_marginBottom="5dp"
            android:id="@+id/btn_truco_seis_eles"
            android:layout_width="wrap_content"
            android:layout_height="140dp"
            android:src="@drawable/seis_truco" />

        <ImageView
            android:layout_marginBottom="5dp"
            android:id="@+id/btn_truco_nove_eles"
            android:layout_width="wrap_content"
            android:layout_height="140dp"
            android:src="@drawable/nove_truco" />

        <ImageView
            android:layout_marginBottom="5dp"
            android:id="@+id/btn_truco_doze_eles"
            android:layout_width="wrap_content"
            android:layout_height="140dp"
            android:src="@drawable/doze_truco" />

    </LinearLayout>

</LinearLayout>
